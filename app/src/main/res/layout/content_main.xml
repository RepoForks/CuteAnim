<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.oushangfeng.cuteanim.MainActivity"
    tools:showIn="@layout/activity_main">

    <com.oushangfeng.cuteanim.SunRiseView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <com.oushangfeng.cuteanim.TriangleView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <com.oushangfeng.cuteanim.PacManView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <com.oushangfeng.cuteanim.EyeHeartView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <com.oushangfeng.cuteanim.ShineView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv"
        android:layout_width="20dp"
        android:layout_height="50dp"
        android:layout_margin="40dp"
        android:src="@mipmap/heart"/>

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="我要炸了"
        android:textSize="15dp"/>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="50dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我要炸了"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我要炸了"
            android:textSize="15dp"/>
    </LinearLayout>

    <com.oushangfeng.cuteanim.ShineContainer
        android:id="@+id/shine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00334455"
        app:targetId="@+id/tv"/>

    <com.oushangfeng.cuteanim.ShineContainer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00334455"
        app:targetId="@+id/iv"/>

    <com.oushangfeng.cuteanim.ShineContainer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00334455"
        app:targetId="@+id/ll"/>

</RelativeLayout>
